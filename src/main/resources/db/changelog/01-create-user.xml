<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="mpanfil">
        <createSequence sequenceName="hibernate_sequence" minValue="1" startValue="1" incrementBy="1"/>
        <createTable tableName="user" remarks="table with users" schemaName="public">
            <column name="id" type="bigint">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <sqlFile dbms="postgresql" encoding="utf8" path="../sql/spring-sec-oauth.sql"
                 relativeToChangelogFile="true" stripComments="true" splitStatements="true"/>
    </changeSet>
</databaseChangeLog>